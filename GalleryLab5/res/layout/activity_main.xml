<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFEE">
    
    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:focusableInTouchMode="true"
    >
    <HorizontalScrollView
         android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/tomjerry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tomjerry" 
        
        android:padding="5dp"/>
    
    <ImageView
        android:id="@+id/pickachu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pickachu"
        android:padding="5dp" />
    
     <ImageView
        android:id="@+id/dragonballz"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dragonballz"
        android:padding="5dp" />
     
      <ImageView
        android:id="@+id/simba"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/simba" 
        android:padding="5dp"/>
      
       <ImageView
        android:id="@+id/princess"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/princess"
        android:padding="5dp"/>
       
        <ImageView
        android:id="@+id/dexter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dexter"
        android:padding="5dp" />
        
</LinearLayout>
</HorizontalScrollView>
 <ImageView
        android:id="@+id/set"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/lay1"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"        
     />
 <TextView
     android:id="@+id/seek1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/set"
     android:text="Adjust Brightness :"
     android:visibility="invisible"
     android:textSize="15sp"
     />
 <SeekBar
       android:id="@+id/brightnessBar"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/seek1"
       android:max="512"
       android:progress="255"
       android:visibility="invisible"/>
 <TextView
     android:id="@+id/seek2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="5dp"
     android:layout_below="@+id/brightnessBar"
     android:text="Adjust Contrast :"
     android:visibility="invisible"
     android:textSize="15sp"
     />
 <SeekBar
       android:id="@+id/ConBar"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/seek2"
       android:max="512"
       android:progress="255"
       android:visibility="invisible"/>

    </RelativeLayout>
</ScrollView>
